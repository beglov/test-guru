<div class="card">
  <div class="card-body">
    <%= form_with(url: feedback_send_message_path, local: true) do %>
      <h5 class="card-title"><%= t('.header') %></h5>

      <div class="form-group">
        <%= text_area_tag(:message, '', size: "80x6") %>
      </div>

      <%= submit_tag(t('.submit'), class: 'btn btn-primary') %>
    <% end %>
  </div>
</div>
