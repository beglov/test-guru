<h1>Passing the <%= @test_passage.test.title %> Test</h1>

<p><small>Вопрос <%= @test_passage.current_question_number %> из <%= @test_passage.test.questions.size %></small></p>

<div class="card border-primary">
  <div class="card-body">

    <p><strong><%= @test_passage.current_question.body %></strong></p>

    <%= form_with(url: test_passage_path(@test_passage), local: true, method: :put) do |form| %>
      <div class="form-group">

        <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
          <div class="form-check">
            <%= b.check_box(class: 'form-check-input') %>
            <%= b.label(class: 'form-check-label') %>
          </div>
        <% end %>

        <p><%= link_to 'Gist Question', gist_test_passage_path(@test_passage), method: :post %></p>

        <p><%= form.submit 'Next', class: 'btn btn-primary mt-3' %></p>

      </div>
    <% end %>

  </div>
</div>
