<h1><%= t('.header') %></h1>

<%= render 'shared/errors', resource: @test %>

<table class="table table-striped table-borderless">
  <thead>
  <tr>
    <th scope="col" class="sort-by-title pointer">
      <%= t('.category') %>
      <%= octicon 'arrow-up', class: 'text-success hide' %>
      <%= octicon 'arrow-down', class: 'text-success hide' %>
    </th>
    <th scope="col"><%= t('.title') %></th>
    <th scope="col"><%= t('.level') %></th>
    <th scope="col"><%= t('.author') %></th>
    <th scope="col"><%= t('.questions') %></th>
    <th scope="col" colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <%= render @tests %>
  </tbody>
</table>

<p><%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary' %></p>
