<%= form_with(model: [:admin, test], local: true) do |form| %>
  <%= render 'shared/errors', resource: test %>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :level %>
    <%= form.number_field :level, class: 'form-control', min: 0 %>
  </div>

  <div class="form-group">
    <%= form.label :timer %>
    <%= form.number_field :timer, class: 'form-control', min: 0 %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
