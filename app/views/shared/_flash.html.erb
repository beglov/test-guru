<% flash.each do |key, message| %>
  <% bs_class = key == 'alert' ? 'danger' : 'primary' %>

  <div class="alert alert-<%= bs_class %> alert-dismissible fade show mt-3" role="alert">
    <%= message.html_safe %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
