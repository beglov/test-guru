<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'TestGuru', root_path, class: 'navbar-brand' %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <% if user_signed_in? %>
        <%= link_to t('.tests'), tests_path, class: 'nav-item nav-link' %>
        <%= link_to t('.my_badges'), my_badges_path, class: 'nav-item nav-link' %>
        <%= link_to t('.all_badges'), badges_path, class: 'nav-item nav-link' %>
        <%= link_to t('.feedback'), feedback_message_path, class: 'nav-item nav-link' %>

        <% if current_user&.admin? %>
          <%= link_to t('.admin_tests'), admin_tests_path, class: 'nav-item nav-link' %>
          <%= link_to t('.admin_badges'), admin_badges_path, class: 'nav-item nav-link' %>
          <%= link_to 'Gists', admin_gists_path, class: 'nav-item nav-link' %>
        <% end %>
      <% end %>
    </div>
  </div>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <%= t('.welcome_html', email: current_user.email) %> |
      <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name) %> |
      <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name) %>
    <% end %>
  </span>
</nav>
