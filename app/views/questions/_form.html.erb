<%= form_with(model: question.new_record? ? [question.test, question] : question, local: true) do |form| %>
  <%= render 'shared/errors', resource: question %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
