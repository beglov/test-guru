<%= form_with(model: action_name == 'edit' ? question : [question.test, question], local: true) do |form| %>
  <%= render 'shared/errors', resource: question %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
